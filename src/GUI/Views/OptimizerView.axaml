<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ProfHeat.GUI.ViewModels"
             xmlns:v="using:ProfHeat.GUI.Views"
             xmlns:m="using:ProfHeat.Core.Models"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProfHeat.GUI.Views.OptimizerView">

    <Design.DataContext>
        <vm:OptimizerViewModel/>
    </Design.DataContext>

    <!-- UI for testing -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">
        <ComboBox PlaceholderText="Select type    " />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
            <Button Content="Import" />
            <Button Content="Export" />
        </StackPanel>
        <Button HorizontalAlignment="Center" Content="       Calculate" Width="134" />
    </StackPanel>
    
</UserControl>
